<%= form_for @user, :html => { :class => "form-stacked" } do |f| %>
  <fieldset>
    <legend>Register Account</legend>
    <% if @user.errors.any? %>
      <% for message in @user.errors.full_messages %>
        <div class="alert-message error"><%= message %></div>
      <% end %>
    <% end %>
    <div class="clearfix">
      <%= f.label :username %>
      <div class="input">
        <%= f.text_field :username %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label 'Confirmation' %>
      <div class="input">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  </fieldset>
  <div class="actions"><%= f.submit "Create Account", :class => 'btn primary' %></div>
<% end %>